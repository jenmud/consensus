{{ define "body" }}
<div class="flex gap-4 px-4 h-full">
    <!-- To Do Lane -->
    <div class="flex-1 bg-gray-600 p-4 rounded-lg shadow-lg">
        <h2 class="text-xl text-red-400 font-semibold mb-4">Backlog</h2>
        <div class="space-y-4">
            {{ range .Backlog }}
                <div class="bg-[#719EC8] hover:bg-[#a3c9ec] hover:text-black p-4 rounded-lg shadow-md">
                    <p>{{ .Name }}</p>
                </div>
            {{ end }}
        </div>
    </div>

    <!-- In Progress Lane -->
    <div class="flex-1 bg-gray-600 p-4 rounded-lg shadow-lg">
        <h2 class="text-xl text-green-400 font-semibold mb-4">In Progress</h2>
        <div class="space-y-4">
            {{ range .InProgress }}
                <div class="bg-[#719EC8] hover:bg-[#a3c9ec] hover:text-black p-4 rounded-lg shadow-md">
                    <p>{{ .Name }}</p>
                </div>
            {{ end }}
        </div>
    </div>

    <!-- Code Review -->
    <div class="flex-1 bg-gray-600 p-4 rounded-lg shadow-lg">
        <h2 class="text-xl text-yellow-600 font-semibold mb-4">Code Review</h2>
        <div class="space-y-4">
            {{ range .CodeReview }}
                <div class="bg-[#719EC8] hover:bg-[#a3c9ec] hover:text-black p-4 rounded-lg shadow-md">
                    <p>{{ .Name }}</p>
                </div>
            {{ end }}
        </div>
    </div>

    <!-- Testing Lane -->
    <div class="flex-1 bg-gray-600 p-4 rounded-lg shadow-lg">
        <h2 class="text-xl text-orange-400 font-semibold mb-4">Testing</h2>
        <div class="space-y-4">
            {{ range .Testing }}
                <div class="bg-[#719EC8] hover:bg-[#a3c9ec] hover:text-black p-4 rounded-lg shadow-md">
                    <p>{{ .Name }}</p>
                </div>
            {{ end }}
        </div>
    </div>

    <!-- Done Lane -->
    <div class="flex-1 bg-gray-600 p-4 rounded-lg shadow-lg">
        <h2 class="text-xl font-semibold mb-4">Done</h2>
        <div class="space-y-4">
            {{ range .Done }}
                <div class="bg-[#719EC8] hover:bg-[#a3c9ec] hover:text-black p-4 rounded-lg shadow-md">
                    <p>{{ .Name }}</p>
                </div>
            {{ end }}
        </div>
    </div>
</div>
{{ end }}